<%= error_messages_for(f.object) %>

<table>
  <tr>
    <td>name</td>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <td>Permalink</td>
    <td><%= f.text_field(:permalink) %></td>
  </tr>
  <tr>
    <td>Position</td>
    <td><%= f.select(:position, 1..@page_count) %></td>
  </tr>
  <tr>
    <td>Visible</td>
    <td><%= f.check_box(:visible) %></td>
  </tr>
  <tr>
    <td>Subject type</td>
    <td><%= f.select :subject, options_for_select(@subjects.collect{|u| u.name}) %></td>
  </tr>
  <tr>
    <td>Submit</td>
    <td><%= f.submit('Save') %></td>
  </tr>
</table>

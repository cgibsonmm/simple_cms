<%= link_to('<< Back to List', subjects_path, class: 'back-link') %>


<div class="subjects-show">
  <h2>Show Subjects</h2>
  <table summary="Subject detail view">
    <tr>
      <th>Name</th>
      <td><%= @subject.name %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @subject.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @subject.visible %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @subject.created_at.strftime('%h-%d-%Y at %I:%M %p') %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @subject.updated_at.strftime('%h-%d-%Y at %I:%M %p') %></td>
    </tr>
  </table>
</div>
